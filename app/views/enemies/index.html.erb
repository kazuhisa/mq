<h1>Listing enemies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Attack</th>
    <th>Defence</th>
    <th>Hp</th>
    <th>Max hp</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @enemies.each do |enemy| %>
  <tr>
    <td><%= enemy.name %></td>
    <td><%= enemy.attack %></td>
    <td><%= enemy.defence %></td>
    <td><%= enemy.hp %></td>
    <td><%= enemy.max_hp %></td>
    <td><%= link_to 'Show', enemy %></td>
    <td><%= link_to 'Edit', edit_enemy_path(enemy) %></td>
    <td><%= link_to 'Destroy', enemy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

