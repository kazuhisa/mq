<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Max hp</th>
    <th>Hp</th>
    <th>Attack</th>
    <th>Defence</th>
    <th>Herb</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.max_hp %></td>
    <td><%= player.hp %></td>
    <td><%= player.attack %></td>
    <td><%= player.defence %></td>
    <td><%= player.herb %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

